{
  "name": "@6river/strap-core",
  "version": "0.0.0-development",
  "license": "MIT",
  "description": "Bootstrap a developer machine.",
  "main": "index.js",
  "scripts": {
    "build": "tsc --project tsconfig.app.json",
    "build:watch": "npm run build -- --watch",
    "clean": "rm -rf dist",
    "lint": "eslint --ext .ts .",
    "proxy": "local-ssl-proxy --source 3000 --target 5000",
    "start": "nodemon | pino-pretty",
    "prestart:prod": "npm run clean && npm run build && cp -r src/views dist/views",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "test": "jest --watch",
    "test:single": "jest",
    "coverage": "open coverage/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/6RiverSystems/strap-core.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/6RiverSystems/strap-core/issues"
  },
  "homepage": "https://github.com/6RiverSystems/strap-core#readme",
  "engines": {
    "node": ">=9.5.0",
    "npm": ">=6.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "6.14.2",
    "@types/chance": "^1.0.9",
    "@types/express": "^4.17.3",
    "@types/express-session": "^1.17.0",
    "@types/jest": "^23.3.14",
    "@types/json5": "0.0.30",
    "@types/node": "^10.17.17",
    "@types/pino": "^4.16.1",
    "@types/sinon": "7.5.1",
    "@typescript-eslint/eslint-plugin": "2.8.0",
    "@typescript-eslint/parser": "2.8.0",
    "chance": "^1.1.4",
    "eslint": "^6.8.0",
    "eslint-config-6river": "^3.0.0",
    "eslint-plugin-mocha": "^6.3.0",
    "jest": "^25.1.0",
    "jest-junit": "^10.0.0",
    "local-ssl-proxy": "^1.3.0",
    "node-mocks-http": "^1.8.1",
    "nodemon": "^2.0.2",
    "pino-pretty": "3.6.1",
    "sinon": "9.0.0",
    "ts-jest": "^25.2.1",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "@6river/reason-guard": "^3.7.3",
    "@nestjs/common": "6.11.1",
    "@nestjs/core": "6.11.1",
    "@nestjs/platform-express": "6.11.1",
    "@nestjs/testing": "6.11.1",
    "@octokit/rest": "^15.18.0",
    "axios": "^0.21.1",
    "ejs": "^3.0.1",
    "express-session": "^1.17.0",
    "json5": "^2.1.1",
    "memorystore": "^1.6.2",
    "pino": "^5.17.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.4"
  }
}
